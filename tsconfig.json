{
  "compilerOptions": {
    "target": "ES6",                             
    "module": "commonjs",                        
    "strict": true,                              
    "esModuleInterop": true,                     
    "skipLibCheck": true,                        
    "forceConsistentCasingInFileNames": true,   
    "outDir": "./dist",
    "lib": ["es6"]                          
  },
  "include": ["src/**/*"],                         
  "exclude": ["node_modules"]
}
